{% extends "@c975LUserFiles/layout.html.twig" %}
{% trans_default_domain 'userFiles' %}
{% set title = 'label.delete_account'|trans %}

{% block userfiles_content %}
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
{# Avatar #}
        <p class="text-center">
            <img class="img-circle" src="{{ app.user.avatar }}" width="128" height="128" />
        </p>
{# Form #}
        {{ form_start(form) }}
            {{ form_widget(form) }}
{# Delete account info #}
            {% include('@c975LUserFiles/deleteAccountInfo.html.twig') %}
{# Submit #}
            <div class="form-group">
                <button type="submit" name="submit" title="{{ 'label.delete_account'|trans }}" class="btn btn-lg btn-danger btn-block">
                    <span class="glyphicon glyphicon-remove white"></span> {{ 'label.delete_account'|trans }}
                </button>
            </div>
        {{ form_end(form) }}
{# Back to dashboard #}
        <p class="text-center">
            <a href="{{ path('userfiles_dashboard') }}" title="{{ 'label.dashboard'|trans }}">
                {{ 'label.back_to_dashboard'|trans }}</a>
        </p>
{# Mandatory field #}
        <p class="text-muted">
            <em>
                {{ 'label.mandatory_field'|trans }}
            </em>
        </p>
    </div>
{% endblock %}